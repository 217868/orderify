<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TablesTextView"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="2"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/NameTextView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="Sosy"
            app:layout_constraintStart_toEndOf="@+id/TablesTextView"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/DescriptionTextView"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:text="do pizzy"
            app:layout_constraintStart_toEndOf="@+id/NameTextView"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/MultiChoiceTextView"
            android:layout_width="50dp"
            android:layout_height="19dp"
            android:layout_marginStart="4dp"
            android:text="YES"
            app:layout_constraintStart_toEndOf="@+id/DescriptionTextView"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

        <ImageButton
            android:id="@+id/ActionButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:contentDescription="TODO"
            app:layout_constraintStart_toEndOf="@+id/MultiChoiceTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bar_addon_element_background"
            tools:ignore="MissingConstraints" />


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>